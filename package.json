{
  "name": "paisley",
  "version": "1.0.0",
  "private": true,
  "description": "paisley is webscrapper",
  "main": "index.js",
  "scripts": {
    "crawl": "node crawler.js",
    "gulp": "gulp",
    "serve": "gulp serve",
    "start": "NODE_ENV=production node --optimize_for_size --max_old_space_size=460 index.js",
    "dev": "NODE_ENV=development node index.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!(got|@szmarczak|cacheable-request|normalize-url|lowercase-keys|responselike|mimic-response)/)"
    ],
    "moduleNameMapper": {
      "^download$": "<rootDir>/tests/mocks/download.js"
    }
  },
  "author": "uduakabaci",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "gulp-rename": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4"
  },
  "dependencies": {
    "cron-parser": "^4.9.0",
    "cron-validator": "^1.2.0",
    "csv": "^6.4.1",
    "date-and-time": "^4.1.2",
    "dotenv": "^17.2.3",
    "download": "^8.0.0",
    "ejs": "^3.1.5",
    "gulp": "^5.0.1",
    "gulp-ejs": "^5.1.0",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "juice": "^11.0.3",
    "nodemailer": "^7.0.12",
    "nodemon": "^3.1.11",
    "pino": "^10.1.0",
    "puppeteer": "^24.34.0",
    "rimraf": "^6.1.2",
    "stream-to-string": "^1.2.0",
    "valid-url": "^1.0.9"
  },
  "engines": {
    "node": ">=14.15.1",
    "npm": ">=6.14.8"
  },
  "pnpm": {
    "overrides": {
      "braces": ">=3.0.3",
      "semver": ">=7.5.2",
      "http-cache-semantics": ">=4.1.1",
      "axios": ">=0.30.2",
      "got": ">=11.8.5",
      "micromatch": ">=4.0.8",
      "serve-static": ">=1.16.0",
      "send": ">=0.19.0"
    }
  }
}
